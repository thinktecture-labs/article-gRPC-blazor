<MudCard Outlined="@Item.Status" Class="@_cssClass">
    <MudCardContent>
        <MudText>@Item.Title</MudText>
        <MudText Class="fade" Typo="Typo.body2">@Item.Description</MudText>
    </MudCardContent>
    <MudCardActions Class="actions">
        @if (!Item.Status)
        {
            <MudIconButton Color="Color.Secondary" Icon="@Icons.Material.Filled.Done" @onclick="@(e => UpdateTaskAsync())"></MudIconButton>
        }
        <MudIconButton Color="Color.Secondary" Icon="@Icons.Material.Filled.Delete" @onclick="@(e => DeleteTask())"></MudIconButton>
    </MudCardActions>
</MudCard>